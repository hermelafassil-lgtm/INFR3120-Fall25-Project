<!-- Include the site header partial (common header for all pages) -->
<%- include ./partials/header.ejs %>

    <!-- Include the site's main navigation bar -->
    <%- include ./partials/main_nav.ejs %>

        <!-- Only show this content if the page title is "Order" -->
        <% if (title==='Order' ) { %> 

            <!-- Page heading showing the title + text -->
            <h1>
                <%= title %> - Place an Order
            </h1>

            <!-- Order form that sends data via email using mailto -->
            <form action="mailto:rishikanth.manotheepan@ontariotechu.net" method="POST" enctype="text/plain"
                style="max-width:400px; margin:auto;">

                <!-- Dish selection section -->
                <div>
                    <label>Choose your dish:</label>

                    <!-- Flexbox layout for radio buttons -->
                    <div style="display:flex; gap:16px; justify-content:space-between; margin:8px 0;">
                        <label>
                            <input type="radio" name="dish" value="Pasta A" required> Pasta A
                        </label>
                        <label>
                            <input type="radio" name="dish" value="Pasta B"> Pasta B
                        </label>
                        <label>
                            <input type="radio" name="dish" value="Pasta C"> Pasta C
                        </label>
                    </div>
                </div>

                <!-- Quantity input -->
                <div>
                    <label for="quantity">Quantity:</label>
                    <input type="number" name="quantity" id="quantity" min="1" required>
                </div>

                <!-- Special instructions for the order -->
                <div>
                    <label for="instructions">Special Instructions:</label>
                    <textarea name="instructions" id="instructions" rows="2"></textarea>
                </div>

                <!-- Customer name -->
                <div>
                    <label for="name">Your Name:</label>
                    <input type="text" name="name" id="name" required>
                </div>

                <!-- Customer email input -->
                <div>
                    <label for="email">Email:</label>
                    <input type="email" name="email" id="email" required>
                </div>

                <!-- Customer phone number -->
                <div>
                    <label for="phone">Phone:</label>
                    <input type="tel" name="phone" id="phone" required>
                </div>

                <!-- Submit and reset buttons -->
                <button type="submit">Place Order</button>
                <input type="reset" value="Reset All" />
            </form>

            <!-- End of the conditional block -->
            <% } %>

                <!-- Include footer partial -->
                <%- include ./partials/footer.ejs %>