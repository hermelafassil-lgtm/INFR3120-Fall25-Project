<!-- Include the site header partial -->
<%- include ../partials/header.ejs %>
<!-- Include the site main nav partial  -->
<%- include ../partials/main_nav.ejs %>
<!-- If statment to show this content if the page title is "Login" -->
<% if (title === 'Login') { %> 

<main class="container">
    <% if (typeof message !== 'undefined' && message.length > 0) { %>
        <div class="alert alert-danger">
            <%= message %>
        </div>
    <% } %>
    <div class="row">
        <div class="offset-md-4 col-md-4">
            <!-- Asks the User to login -->
            <h1>Please login</h1>
            <!-- Form now POSTS to /users/login -->
            <form action="/users/login" method="POST" autocomplete="off">
                <fieldset class="form-group">
                    <label for="username"></label>
                    <input type="text" class="form-control"
                           name="username"
                           placeholder="Enter username"
                           id="username" required autofocus>
                </fieldset>
                <fieldset class="form-group">
                    <!-- Label for password -->
                    <label for="password"></label>
                    <input type="password" class="form-control"
                           name="password"
                           placeholder="Enter password"
                           id="password" required>
                    or
                       <!-- Register link -->
                    <a href="/users/register">Register here</a>
                </fieldset>
                <fieldset class="form-group text-right mt-3">
                    <!-- Creates a button login when the user in registering and submits -->
                    <input type="submit" class="btn btn-success" value="Login">
                    <a href="/"></a>
                    <!-- Creates a button cancel when the user in registering and preses cancel-->
                    <input type="button" class="btn btn-warning" value="Cancel" onclick="window.location='/'">
                </fieldset>
            </form>
        </div>
    </div>
</main>

<% } %>
<!-- Includes the footer  -->
<%- include ../partials/footer.ejs %>