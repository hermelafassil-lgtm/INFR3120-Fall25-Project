<!-- Styles for this page only -->
<style>
    .order-container {
        max-width: 700px;
        background: #ffffff;
        margin: 40px auto;
        padding: 35px 45px;
        border-radius: 15px;
        box-shadow: 0px 4px 15px rgba(0,0,0,0.15);
        font-family: "Poppins", sans-serif;
    }

    h1 {
        text-align: center;
        font-size: 2rem;
        margin-bottom: 25px;
        color: #2f3b28;
    }

    /* Basic label styling */
    label {
        font-weight: 600;
        display: block;
        margin-top: 15px;
        margin-bottom: 5px;
    }

    /* All inputs look consistent */
    input[type="text"],
    input[type="email"],
    input[type="tel"],
    input[type="number"],
    textarea {
        width: 100%;
        padding: 10px;
        border-radius: 8px;
        border: 1px solid #b7b7b7;
        font-size: 1rem;
        background: #f7f7f7;
    }

    textarea {
        height: 90px;
        resize: none;
    }

    /* Radio buttons line up nicely */
    .radio-group label {
        display: flex;
        align-items: center;
        gap: 10px;
        font-weight: 500;
    }

    /* Submit button styling */
    .submit-btn {
        margin-top: 25px;
        width: 100%;
        padding: 14px;
        background: #2f3b28;
        color: white;
        border: none;
        font-size: 1.1rem;
        border-radius: 10px;
        cursor: pointer;
        transition: 0.3s ease-in-out;
    }

    .submit-btn:hover {
        background: #425036;
    }
</style>

<!-- Order form section -->
<div class="order-container">

    <!-- Dynamic page title -->
    <h1><%= title %></h1>

    <!-- Actual form that creates the order -->
    <form action="/orders/create" method="POST">

        <!-- Dish selection -->
        <label>Choose your dish:</label>
        <div class="radio-group">
            <label><input type="radio" name="dish" value="Pasta A" required> Pasta A</label>
            <label><input type="radio" name="dish" value="Pasta B"> Pasta B</label>
            <label><input type="radio" name="dish" value="Pasta C"> Pasta C</label>
        </div>

        <!-- Quantity field -->
        <label>Quantity:</label>
        <input type="number" name="quantity" required min="1">

        <!-- Extra notes -->
        <label>Special Instructions:</label>
        <textarea name="instructions"></textarea>

        <!-- Customer details -->
        <label>Your Name:</label>
        <input type="text" name="name" required>

        <label>Email:</label>
        <input type="email" name="email" required>

        <label>Phone:</label>
        <input type="tel" name="phone" required>

        <!-- Submit -->
        <button class="submit-btn" type="submit">Place Order</button>
    </form>

</div>

